#!/bin/bash

if [ "$#" -ne 1 ]; then
    echo -e "Usage examples:\n$0 inc\n$0 dec" >&2
    exit 1
fi

printf -v current %.0f "$(light)"
if [[ "$1" == "inc" ]]; then
    if ((current < 10)); then
        light -A 1%
    else
        light -A 5%
    fi
else
    if ((current >= 15)); then
        light -U 5%
    elif ((current > 10)); then
        light -S 10%
    elif ((current > 1)); then
        light -U 1%
    fi
fi
