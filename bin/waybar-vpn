#!/bin/bash

vpn() {
    if [ -e "/sys/class/net/warp" ]; then
        icon=''
        class=on
    else
        icon=''
        class=off
    fi
    printf '{"text": " %s ", "class": "%s"}\n' "$icon" "$class"
}

if [[ $HOSTNAME == home-* ]]; then
    vpn
    ip monitor link | while read -r line; do vpn; done
fi
